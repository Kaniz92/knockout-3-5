@model OrgEmployee.Models.Employee

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

    <fieldset>
        <legend>Employee</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.LastName)
        </div>
        <div class="editor-field">
            <input data-bind="kendoMaskedTextBox: LastName" />
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FirstName)
        </div>
        <div class="editor-field">
            <input data-bind="kendoMaskedTextBox: FirstName" />
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.JoiningDate)
        </div>
        <div class="editor-field">
            <input data-bind="kendoDatePicker: JoiningDate" />
        </div>

        <p>
            <button type="button" data-bind="kendoButton: EditEmployee">Edit</button>
        </p>
    </fieldset>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script type="text/javascript">
    var MyNamespace = MyNamespace || {};
    MyNamespace.RawModelData = @Html.Raw(ViewBag.InitialData);
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Scripts/ViewModels/Employee/EditVM.js")

}
