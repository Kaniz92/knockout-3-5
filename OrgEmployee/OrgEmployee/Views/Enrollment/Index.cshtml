@model IEnumerable<OrgEmployee.Models.Enrollment>

@{
    ViewBag.Title = "Index";
}
<div class="k-content row home-wallpaper">
    <br />
    <h2>Enrollment Details</h2>
    <br />
</div>
<div class="k-content row center k-inner">
    <p>
        <button data-bind="kendoButton: CreateNew">Create New</button>

        <div data-bind="kendoGrid: {data: Enrollments, rowTemplate: 'rowTmpl', pageable:{pageSize:10},useKOTemplates: true,
    columns:[{title:'Band'},{title:'Department'},{title:'LastName'},{title:'Action'}]
             }"
             class="k-content kendo-grid">

        </div>
        <script id="rowTmpl" type="text/html">
            <tr>
                <td data-bind="text: Band"></td>
                <td data-bind="text: Department.Title"></td>
                <td data-bind="text: Employee.LastName"></td>
                <td>
                    <span data-bind="click:  $parent.ViewEnrollment.bind($data,EnrollmentID)" class="k-icon k-i-information k-i-info"></span> |
                    <span data-bind="click:  $parent.EditEnrollment.bind($data,EnrollmentID)" class="k-icon k-i-edit k-i-pencil"></span> |
                    <span data-bind="click:  $parent.DeleteEnrollment.bind($data,EnrollmentID)" class="k-icon k-i-delete k-i-trash"></span>
                </td>

            </tr>
        </script>
        <br />
        <button data-bind="kendoButton: Back">Back <span class="k-i-undo k-icon"></span></button>
</div>


@section Scripts {
    @Scripts.Render("~/Scripts/ViewModels/Enrollment/IndexVM.js")
}

